# ============================================
# Solana Trading Bot - Environment Configuration
# ============================================

# --------------------------------------------
# REQUIRED: Telegram Bot Configuration
# --------------------------------------------
# Get your bot token from @BotFather on Telegram
BOT_TOKEN=your_bot_token_from_botfather

# --------------------------------------------
# REQUIRED: Supabase Configuration
# --------------------------------------------
# Your Supabase project URL and anon key
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key

# --------------------------------------------
# REQUIRED: Solana RPC Configuration
# --------------------------------------------
# Use a private RPC for MEV protection (Helius, QuickNode, etc.)
# Public RPC is NOT recommended for production
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com

# Optional: Helius API key for enhanced features (priority fees)
HELIUS_API_KEY=

# --------------------------------------------
# REQUIRED: Jupiter API Configuration
# --------------------------------------------
# Get your API key from: https://portal.jup.ag/
JUPITER_API_KEY=your_jupiter_api_key

# --------------------------------------------
# REQUIRED: Encryption Configuration
# --------------------------------------------
# CRITICAL: Generate a strong 32-byte hex key for production
# Use: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# NEVER share this key - it protects all user wallets
MASTER_ENCRYPTION_KEY=your_64_character_hex_key_here

# --------------------------------------------
# OPTIONAL: Trading Configuration
# --------------------------------------------
# Default slippage in basis points (500 = 5%)
DEFAULT_SLIPPAGE_BPS=500

# Maximum priority fee in lamports
MAX_PRIORITY_FEE_LAMPORTS=100000

# --------------------------------------------
# OPTIONAL: MEV Protection
# --------------------------------------------
# Enable Jito bundles for MEV protection (default: true)
USE_JITO=true

# Jito tip amount in lamports (default: 10000)
JITO_TIP_LAMPORTS=10000

# --------------------------------------------
# OPTIONAL: Server Configuration
# --------------------------------------------
# Health check server port (default: 3000)
PORT=3000

# Node environment (development or production)
NODE_ENV=production

# Logging level (debug, info, warn, error)
LOG_LEVEL=info
